{% extends "main.tmpl" %}
{% block background %}
{% endblock background %}

{% block content %}
    <mxCell id="2" value="Teams" style="locked=1;" parent="0" />
    <mxCell id="3" value="Groups" style="locked=1;" parent="0" />
    <mxCell id="4" value="Modules" style="locked=1;" parent="0" />
# for item in items
# if item.class in ['undefined']
# endif
# if item.class == 'container'
    <mxCell id="{{ item.id }}" value="{{ item.value }}" style="group" parent="{{ item.parent_id }}" vertex="1">
      <mxGeometry x="{{ item.x }}" y="{{ item.y }}" width="{{ item.w }}" height="{{ item.h }}" as="geometry" />
    </mxCell>
# endif
# if item.class == 'fix'
    <mxCell id="{{ item.id }}" value="{{ item.value }}" style="rounded=0;whiteSpace=wrap;html=1;fontSize=13;fillColor=#f5f5f5;strokeColor=#666666;fontColor=#333333;" parent="{{ item.parent_id }}" vertex="1">
      <mxGeometry x="{{ item.x }}" y="{{ item.y }}" width="{{ item.w }}" height="{{ item.h }}" as="geometry" />
    </mxCell>
# endif
# if item.class == 'group'
    <mxCell id="{{ item.id }}" value="{{ item.value }}" style="rounded=0;whiteSpace=wrap;html=1;fontSize=32;horizontal=1;verticalAlign=top;" parent="{{ item.parent_id }}" vertex="1">
      <mxGeometry x="{{ item.x }}" y="{{ item.y }}" width="{{ item.w }}" height="{{ item.h }}" as="geometry" />
    </mxCell>
# endif
# if item.class == 'team'
    <mxCell id="{{ item.id }}" value="{{ item.value }}" style="rounded=0;whiteSpace=wrap;html=1;fillColor=#ffff88;strokeColor=#36393d;verticalAlign=top;fontSize=54;fontStyle=0;" parent="{{ item.parent_id }}" vertex="1">
      <mxGeometry x="{{ item.x }}" y="{{ item.y }}" width="{{ item.w }}" height="{{ item.h }}" as="geometry" />
    </mxCell>
# endif
# endfor
{% endblock content %}
